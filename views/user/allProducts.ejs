<%- include("../../views/partials/user/header") %>


    <!-- SweetAlert2 and jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        .sidebar {
            background-color: #1e1e1e;
            color: white;
            padding: 1rem;
            border-radius: 0.5rem;
            height: 100%;
            overflow-y: auto;
        }

        .filter-title {
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 1rem;
            border-bottom: 1px solid #555;
            padding-bottom: 0.25rem;
        }

        .filter-section {
            margin-bottom: 1.5rem;
        }

        .filter-item {
            margin-bottom: 0.4rem;
            list-style: none;
        }

        .filter-section ul {
            padding-left: 0;
            margin-bottom: 0;
            max-height: 130px;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: #888 #2e2e2e;
        }

        .filter-section ul::-webkit-scrollbar {
            width: 6px;
        }

        .filter-section ul::-webkit-scrollbar-thumb {
            background-color: #888;
            border-radius: 3px;
        }

        .filter-section ul::-webkit-scrollbar-track {
            background-color: #343a40;
        }

        .price-button {
            width: 100%;
            text-align: left;
        }

        .filter-item a:hover {
            background-color: #444;
            border-radius: 5px;
            padding-left: 0.4rem;
            color: #fff;
            transition: 0.3s;
        }

        .filter-item a.active {
            background-color: #555;
            font-weight: bold;
            border-radius: 5px;
            padding-left: 0.4rem;
        }

        .product-item img {
            max-height: 150px;
            object-fit: contain;
        }

        .wishlist-icon i {
            color: #6c757d;
            /* default grey (Bootstrap's text-secondary) */
            transition: color 0.3s ease;
        }

        .wishlist-icon:hover i {
            color: red;
            /* red on hover */
        }

        .wishlist-icon.selected i {
            color: red;
            /* stay red if selected */
        }
    </style>

    <div class="container mt-4">
        <div class="row">
            <!-- Sidebar -->
            <aside class="col-md-3 col-lg-2 sidebar">
                <h5 class="mb-3">Filters</h5>

                <!-- Category Filter -->
                <div class="filter-section mb-3">
                    <div class="filter-title">Categories</div>
                    <ul class="ps-1">
                        <% categories.forEach(category=> { %>
                            <li class="filter-item">
                                <a href="/allProducts?category=<%= category._id %>&sort=<%= sort %>&search=<%= search || '' %>"
                                    class="text-light text-decoration-none d-block <%= selectedCategory == category._id ? 'active' : '' %>">
                                    <%= category.categoryName %>
                                </a>
                            </li>
                            <% }) %>
                    </ul>
                </div>

                <!-- Brand Filter -->
                <div class="filter-section mb-3">
                    <div class="filter-title">Brands</div>
                    <ul class="ps-1">
                        <% brands.forEach(brand=> { %>
                            <li class="filter-item">
                                <a href="/filter?brand=<%= brand._id %>"
                                    class="text-light text-decoration-none d-block <%= selectedBrand === brand ? 'active' : '' %>">
                                    <%= brand %>
                                </a>
                            </li>
                            <% }) %>
                    </ul>
                </div>

                <!-- Price Filter -->
                <div class="filter-section mb-3">
                    <div class="filter-title">Filter by Price</div>
                    <form id="price-filter-form">
                        <div class="price-options d-flex flex-column gap-2">
                            <a href="/allProducts?gt=0&lt=500&sort=<%= sort %>&search=<%= search || '' %>" class="price-button btn btn-outline-light btn-sm">Under
                                ₹500</a>
                            <a href="/allProducts?gt=500&lt=1000&sort=<%= sort %>&search=<%= search || '' %>" class="price-button btn btn-outline-light btn-sm">₹500
                                - ₹1000</a>
                            <a href="/allProducts?gt=1000&lt=1500&sort=<%= sort %>&search=<%= search || '' %>"
                                class="price-button btn btn-outline-light btn-sm">₹1000 - ₹1500</a>
                            <a href="/allProducts?gt=1500&lt=100000&sort=<%= sort %>&search=<%= search || '' %>"
                                class="price-button btn btn-outline-light btn-sm">Above ₹1500</a>
                        </div>
                    </form>
                </div>
            </aside>

            <!-- Products Section -->
            <section class="col-md-9 col-lg-10">
                <h3 class="mb-4">
                    <%= selectCategoryName ? selectCategoryName : 'Products' %>
                </h3>

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                    <% products.forEach((product, index)=> { %>
                        <div class="col">
                            <div
                                class="card h-100 shadow-sm p-2 d-flex flex-column justify-content-between position-relative">

                                <% if(product.stock===0) { %>
                                    <span class="badge bg-danger position-absolute"
                                        style="top: 10px; right: 10px; z-index: 3;">Out of Stock</span>
                                    <% } else if(product.effectiveDiscount > 0) { %>
                                        <span class="badge bg-success position-absolute"
                                            style="top: 10px; right: 10px; z-index: 3;">-<%= product.effectiveDiscount  %>%</span>
                                        <% } %>

                                            <a href="#" onclick="addToWishlist('<%= product._id %>', this)"
                                                class="btn btn-sm btn-light border rounded-circle wishlist-icon position-absolute <%= product.inWishlist ? 'selected' : '' %>"
                                                style="top: 10px; left: 10px; z-index: 3;">
                                                <i class="fas fa-heart"></i>
                                            </a>

                                            <!-- Image -->
                                            <a href="/productDetails/<%= product._id %>">
                                                <img src="<%= product.productImage[0] %>"
                                                    alt="<%= product.productName %>" class="card-img-top img-fluid" />
                                            </a>

                                            <div class="card-body p-2">
                                                <!-- Name -->
                                                <h6 class="card-title text-truncate fw-semibold">
                                                    <%= product.productName %>
                                                </h6>

                                                <!-- Price -->
                                                <div class="text-start mb-2">
                                                    <span class="fw-bold text-success">
                                                        ₹<%= product.price - (product.price * product.effectiveDiscount / 100)%>
                                                    </span>
                                                    <% if (product.effectiveDiscount > 0) { %>
                                                        <small class="text-muted text-decoration-line-through ms-2">
                                                            ₹<%= product.price.toFixed(2) %>
                                                        </small>
                                                        <% } %>
                                                </div>

                                                <!-- Quantity & Add to Cart -->
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <div class="input-group input-group-sm" style="width: 80px;">
                                                        <button class="btn btn-outline-secondary" type="button"
                                                            onclick="decreaseQty('<%= currentPage %>qty<%= index %>')">−</button>
                                                        <input type="text" id="<%= currentPage %>qty<%= index %>"
                                                            class="form-control text-center" value="1" readonly>
                                                        <button class="btn btn-outline-secondary" type="button"
                                                            onclick="increaseQty('<%= currentPage %>qty<%= index %>', '<%= product.stock %>')">+</button>
                                                    </div>


                                                    <a class="btn btn-primary btn-sm d-flex align-items-center" href="#"
                                                        onclick="addToCart('<%= product._id %>', '<%= currentPage %>qty<%= index %>')">Add
                                                        to Cart</a>
                                                </div>
                                            </div>

                            </div>
                        </div>
                        <% }) %>
                </div>

                <!-- Pagination -->
                <div class="d-flex justify-content-center mt-4">
                    <nav>
                        <ul class="pagination">
                            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>">‹</a>
                            </li>

                            <% for (let i=1; i <=totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>

                                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                        <a class="page-link" href="?page=<%= currentPage + 1 %>">›</a>
                                    </li>
                        </ul>
                    </nav>
                </div>
            </section>
        </div>
    </div>

    <!-- JS -->
    <script>

        function increaseQty(id, stock = 5) {
            const input = document.getElementById(id);
            let qty = parseInt(input.value);
            if (qty < stock && qty < 5) input.value = qty + 1;
        }

        function decreaseQty(id) {
            const input = document.getElementById(id);
            let qty = parseInt(input.value);
            if (qty > 1) input.value = qty - 1;
        }

        function addToCart(productId, qtyInputId) {
            const qty = document.getElementById(qtyInputId).value;
            $.ajax({
                url: '/addToCart',
                method: 'POST',
                data: { productId: productId, quantity: qty },
                success: (response) => {
                    if (response.success) {
                        Swal.fire({
                            title: "Added to Cart",
                            text: response.message,
                            icon: "success",
                            confirmButtonText: "Go to Cart",
                            showCancelButton: true,
                            cancelButtonText: "Continue Shopping"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/cart';
                            }
                        });
                    } else {
                        Swal.fire({
                            title: "Error",
                            text: response.message || "Failed to add to cart",
                            icon: "error",
                            confirmButtonText: "OK"
                        });
                    }
                },
                error: () => {
                    Swal.fire({
                        title: "Server Error",
                        text: "Something went wrong. Please try again later.",
                        icon: "error"
                    });
                }
            });
        }

                // Add to wishlist function
function addToWishlist(productId,el) {
  $.ajax({
    url: '/addToWishlist',
    method: "POST",
    data: { productId: productId },
    success: (response) => {
      if (response.status) {
        Swal.fire({
          title: "Added to Wishlist",
          text: "The product has been added to your wishlist.",
          icon: "success",
          timer: 2000,
          showConfirmButton: false
        });

        if (el) {
          el.classList.add('selected');
        }
      } else {
        Swal.fire({
          title: "Already in Wishlist",
          text: response.message,
          icon: "info",
          timer: 2000,
          showConfirmButton: false
        });
        if (el) {
          el.classList.add('selected');
        }
      }
    },
    error: (xhr) => {
      if (xhr.status === 401) {
        handleAuthError(
          "Not Logged In",
          "You need to log in to add items to your wishlist."
        );
      } else {
        Swal.fire({
          title: "Error",
          text: "There was an error adding the product to your wishlist.",
          icon: "error",
          timer: 2000,
          showConfirmButton: false
        });
      }
    }
  });
}
    </script>

    <%- include("../../views/partials/user/footer") %>